@using RestautantMvc.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Admin Registration";
}
<div class="bg-light-brand min-vh-100">
    <!-- Header -->
    <section class="bg-primary-brand text-light-brand py-5">
        <div class="container text-center">
            <h1 class="display-5 fw-bold mb-3">👨‍🍳 Admin Registration</h1>
            <p class="lead">Create your restaurant management account</p>
        </div>
    </section>

    <!-- Registration Form -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-card p-4 rounded shadow">
                    <div class="text-center mb-4">
                        <div style="font-size: 4rem;" class="mb-3">🔐</div>
                        <h2 class="h4 text-dark-brand mb-0">Join Our Team</h2>
                        <p class="text-muted-custom">Register as a restaurant admin</p>
                    </div>

                    <!-- Display validation summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Success/Error Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Register" asp-controller="Auth" method="post" class="login-form">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label fw-semibold text-dark-brand">
                                <i class="bi bi-person-circle me-2"></i>Username
                            </label>
                            <input asp-for="Username"
                                   class="form-control form-control-custom"
                                   placeholder="Choose a username"
                                   autocomplete="username" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold text-dark-brand">
                                <i class="bi bi-lock-fill me-2"></i>Password
                            </label>
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control form-control-custom"
                                   placeholder="Create a secure password"
                                   autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <small class="text-muted-custom">Choose a strong password with at least 8 characters</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold text-dark-brand">
                                <i class="bi bi-lock-check me-2"></i>Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   class="form-control form-control-custom"
                                   placeholder="Confirm your password"
                                   autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SecretCode" class="form-label fw-semibold text-dark-brand">
                                <i class="bi bi-key-fill me-2"></i>Chef Secret Code
                            </label>
                            <input asp-for="SecretCode"
                                   type="password"
                                   class="form-control form-control-custom"
                                   placeholder="Enter the management secret code"
                                   autocomplete="off" />
                            <span asp-validation-for="SecretCode" class="text-danger small"></span>
                            <small class="text-muted-custom">Ask the management for this special code</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary-brand btn-lg">
                                <i class="bi bi-person-plus me-2"></i>Register Admin
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted-custom mb-2">
                            Already have an account?
                        </p>
                        <a asp-controller="Auth" asp-action="Login" class="text-decoration-none fw-semibold text-primary-brand">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Sign In Here
                        </a>
                    </div>

                    <div class="text-center mt-3">
                        <small class="text-muted-custom">
                            <i class="bi bi-shield-lock me-1"></i>
                            Secure admin registration
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}