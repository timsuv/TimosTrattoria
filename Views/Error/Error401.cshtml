@{
    ViewData["Title"] = "Unauthorized Access";
    Layout = "_Layout";
}

<div class="bg-light-brand min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
              
                <div class="mb-4" style="font-size: 8rem; line-height: 1;">
                    🔒
                </div>

              
                <h1 class="display-1 fw-bold text-warning mb-0" style="opacity: 0.1; font-size: 10rem; margin-top: -100px; position: relative; z-index: -1;">401</h1>

                <h2 class="display-5 fw-bold text-dark-brand mb-3">Alto! Staff Only Beyond This Point</h2>

                <!-- error msg -->
                <p class="lead text-muted-custom mb-4">
                    This area is reserved for our kitchen staff and restaurant management.
                    You need to be logged in with proper credentials to access this page.
                </p>

              
                <div class="card-muted p-4 rounded mb-4 mx-auto" style="max-width: 500px;">
                    <p class="mb-0 fst-italic">
                        "The kitchen is the heart of the home... but only the chef holds the key!"
                    </p>
                    <small class="text-muted">- Italian Kitchen Wisdom</small>
                </div>

                <!-- action btns -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center mb-5">
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary-brand btn-lg px-4">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary-brand btn-lg px-4">
                        <i class="bi bi-house-door me-2"></i>Go to Homepage
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-dark btn-lg px-4">
                        <i class="bi bi-arrow-left me-2"></i>Go Back
                    </button>
                </div>

                <div class="mt-5 pt-3 border-top">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="alert alert-info bg-light border-info" role="alert">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Are you a staff member?</strong>
                                Please use your credentials to access the admin panel.
                            </div>
                        </div>
                    </div>
                    <p class="text-muted-custom mt-3 mb-2">For assistance, please contact:</p>
                    <p class="mb-0">
                        <a href="tel:0831010" class="text-decoration-none text-secondary-brand fw-semibold">
                            <i class="bi bi-telephone me-2"></i>08 31 01 00
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>