@using RestautantMvc.Services
@inject IAuthService AuthService

@{
    var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();

    var isAuth = await AuthService.IsAuth();
    var currentUser = await AuthService.GetCurrentUser();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Timo´s Trattoria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestautantMvc.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary-brand sticky-top mb-4">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand navbar-brand-custom">
                    🍝 Timo's Trattoria
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        style="border-color: var(--floral-white)">
                    <span class="navbar-toggler-icon"></span>

                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto navbar-nav-custom">
                        <li class="nav-item">
                            <a asp-controller="Home"
                               asp-action="Index"
                               class="nav-link @(currentPath == "/" ? "active" : "")">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Menu"
                               asp-action="Index"
                               class="nav-link @(controller?.ToLower() == "menu" ? "active" : "")">
                                Menu
                            </a>
                        </li>
                        @if (isAuth)
                        {
                            <li class="nav-item">
                                <a asp-controller="Admin"
                                   asp-action="Index"
                                   class="nav-link @(controller?.ToLower() == "admin" ? "active" : "")">
                                    Admin
                                </a>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav navbar-nav-custom">
                        @if (isAuth)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@currentUser
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Auth"
                                   asp-action="Login"
                                   class="nav-link @(controller?.ToLower() == "auth" && action?.ToLower() == "login" ? "active" : "")">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>

                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="section-padding bg-accent-brand text-light-brand">
        <div class="container text-center">
            <h2 class="display-5 fw-bold mb-5">Visit Us Today</h2>
            <div class="row justify-content-center">
                <div class="col-md-5 mb-4 mb-md-0">
                    <h3 class="h5 fw-bold mb-3">Location</h3>
                    <p class="mb-0">
                        Storgatan 55<br />
                        Stockholm
                        <br />

                    </p>
                </div>
                <div class="col-md-5">
                    <h3 class="h5 fw-bold mb-3">Hours</h3>
                    <p class="mb-0">
                        Mon-Thu: 11:00-00:00<br />
                        Fri-Sat: 11:00-late<br />
                        Sun: 12:00-21:00
                    </p>
                </div>
            </div>
            <div class="mt-4">
                <a href="tel:0761772149" class="h5  link-primary fw-semibold text-light-brand   ">08 31 01 00</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
