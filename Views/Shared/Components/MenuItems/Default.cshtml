@using RestautantMvc.ViewModels
@model MenuViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Manage Menu</h3>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createMenuModal">
        <i class="bi bi-plus-circle me-2"></i>Add New Menu Item
    </button>
</div>

@if (Model.MenuItems.Any())
{
    <!--group items  -->
    var groupedItems = Model.MenuItems.GroupBy(i => i.Category).OrderBy(g => g.Key);

    <div class="accordion" id="menuAccordion">
        @foreach (var group in groupedItems)
        {
            var categoryId = $"category-{group.Key}";
            var isFirst = group.Key == groupedItems.First().Key;

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button @(!isFirst ? "collapsed" : "")"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#@categoryId">
                        <i class="bi bi-tag me-2"></i>@group.First().CategoryName
                        <span class="badge bg-secondary ms-2">@group.Count() items</span>
                    </button>
                </h2>
                <div id="@categoryId"
                     class="accordion-collapse collapse @(isFirst ? "show" : "")"
                     data-bs-parent="#menuAccordion">
                    <div class="accordion-body">
                        <div class="row g-3">
                            @foreach (var item in group.OrderBy(i => i.Name))
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="card-title">@item.Name</h5>
                                                @if (item.IsPopular)
                                                {
                                                    <span class="badge bg-warning text-dark">Popular</span>
                                                }
                                            </div>
                                            <p class="card-text text-muted small">@item.Description</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="h5 mb-0 text-success">@item.Price.ToString("F2") kr</span>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#editMenuModal-@item.MenuItemId">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- edit modal -->
                                <div class="modal fade modal-blur" id="editMenuModal-@item.MenuItemId" tabindex="-1">
                                    <div class="modal-dialog modal-lg ">
                                        <div class="modal-content">
                                            <form asp-action="UpdateMenuItem" asp-controller="Admin" method="post">
                                                <div class="modal-header bg-primary text-white">
                                                    <h5 class="modal-title">
                                                        <i class="bi bi-pencil-square me-2"></i>Edit Menu Item: @item.Name
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <input type="hidden" name="id" value="@item.MenuItemId" />

                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Item Name *</label>
                                                            <input type="text"
                                                                   class="form-control"
                                                                   name="Name"
                                                                   value="@item.Name"
                                                                   required />
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Price (kr) *</label>
                                                            <input type="number"
                                                                   class="form-control"
                                                                   name="Price"
                                                                   value="@item.Price.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)"
                                                                   step="1"
                                                                   min="0"
                                                                   required />
                                                        </div>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="form-label">Description</label>
                                                        <textarea class="form-control"
                                                      name="Description"
                                                      rows="3">@item.Description</textarea>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Category *</label>
                                                            <select class="form-select" name="Category" required>
                                                                @foreach (MenuCategory cat in Enum.GetValues(typeof(MenuCategory)))
                                                                {
                                                                    if (cat == item.Category)
                                                                    {
                                                                        <option value="@((int)cat)" selected>@cat.ToString()</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@((int)cat)">@cat.ToString()</option>
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Image URL</label>
                                                            <input type="text"
                                                                   class="form-control"
                                                                   name="BildUrl"
                                                                   value="@item.BildUrl"
                                                                   placeholder="https://example.com/image.jpg" />
                                                        </div>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input"
                                                               type="checkbox"
                                                               name="IsPopular"
                                                               value="true"
                                                               @(item.IsPopular ? "checked" : "") />
                                                        <label class="form-check-label">
                                                            Mark as Popular Item
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                                    </button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="bi bi-check-circle me-1"></i>Save Changes
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-menu-button-wide" style="font-size: 3rem;"></i>
        <p class="text-muted mt-3">No menu items found.</p>
    </div>
}

<!-- create table modal -->
<div class="modal fade modal-blur" id="createMenuModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateTable" asp-controller="Admin" method="post">
                <div class="modal-header bg-success text-light">
                    <h5 class="modal-title">Create New Table</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Table Number</label>
                        <input type="number" class="form-control" name="TableNumber" required min="1" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Capacity</label>
                        <input type="number" class="form-control" name="Capacity" required min="1" max="20" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create Table</button>
                </div>
            </form>
        </div>
    </div>
</div>